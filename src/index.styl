.ldnotify
  position: fixed
  pointer-events: none
  //-zidx(notify,"max")
  z-index: 5000  //- z-notify
  top: 50px
  margin: auto
  left: 0
  right: 0
  text-align: center
  display: flex
  flex-direction: column
  flex-wrap: nowrap
  align-items: center
  .alert
    min-width: 200px
    text-align: center
    box-shadow: 0 1px 1px rgba(0,0,0,.2)
    display: inline-block
    flex: 0 0 auto
    border: 1px solid currentColor

@keyframes ldnotify-in
  0%
    opacity: 0; transform: translate(0,.5em)
  100%
    opacity: 1; transform: translate(0,0)

.ldnotify-in
  animation: ldnotify-in .35s ease-out 1


@keyframes ldnotify-out
  0%
    opacity: 1; transform: translate(0,0)
  100%
    opacity: 0; transform: translate(0,-.5em)

.ldnotify-out
  animation: ldnotify-out .35s ease-out 1 forwards

.ldnotify-item
  padding: .5em 1em
  box-shadow: 0 2px 3px rgba(0,0,0,.2)
  background: rgba(255,255,255,.95)
  border-radius: .25em
  min-width: 10em
  max-width: 96%
  margin: 0 2% .75em
  color: rgba(0,0,0,.75)
  position: relative
  text-overflow: ellipsis
  white-space: pre
  overflow: hidden
  span
    padding-left: 1.5em
  &:before
    display: inline-block
    width: 1em
    height: 1em
    content: " "
    background-position: center center
    background-repeat: no-repeat
    background-size: cover
    position: absolute
    left: .75em
    top: .5em
    bottom: .5em
    margin: auto


.ldnotify-success
  background: rgba(192,255,192,.95)
  color: rgba(32,96,32,.8)
  &:before
    background-image: unquote('url(data:image/svg+xml;base64,)')

